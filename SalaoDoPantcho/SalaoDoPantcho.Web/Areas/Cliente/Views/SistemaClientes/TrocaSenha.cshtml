@model SalaoDoPantcho.Web.Areas.Cliente.Models.ViewModelClienteTrocarSenha
@{
    ViewBag.Title = "Salão do Pantcho - Trocar Senha do Cliente";
    Layout = "~/Areas/Cliente/Views/Shared/_layout.cshtml";
}

<section class="row">
    <div class="col-sm-8">
        <h1>Salão do Pantcho</h1>
        <h4>Barbershop</h4>
        <hr />
        <h5>Área Restrita do Cliente - Ativação/Desativação da Conta do Cliente</h5><br />
        <div class="col-sm-4 formcontato" id="frmLogin">
            <h6 class="txtformulariodecontato">Formulário de Troca de Senha do Cliente</h6><hr />
            @if (@TempData["MensagemSucesso"] != null)
            {
                <div class="alert alert-success" style="text-align:center;" role="alert">
                    @TempData["MensagemSucesso"]
                </div>
            }
            @if (@TempData["MensagemErro"] != null)
            {
                <div class="alert alert-danger" style="text-align:center;" role="alert">
                    @TempData["MensagemErro"]
                </div>
            }
            @using (Html.BeginForm("TrocarSenhaCliente", "SistemaClientes", FormMethod.Post))
            {
                @Html.AntiForgeryToken();
                <div class="txtErro">
                    @Html.ValidationSummary()
                </div>
                <div class="form-group">
                    @Html.LabelFor(cliente => cliente.Login, new { @for = "login" })<br />
                    @Html.TextBoxFor(cliente => cliente.Login, new { @type = "text", @class = "form-control", @id = "login", @accesskey = "1" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(cliente => cliente.SenhaAtual, new { @for = "senhaAtual" })<br />
                    @Html.PasswordFor(cliente => cliente.SenhaAtual, new { @type = "password", @class = "form-control", @id = "senhaAtual", @accesskey = "5" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(cliente => cliente.NovaSenha, new { @for = "novaSenha" })<br />
                    @Html.PasswordFor(cliente => cliente.NovaSenha, new { @type = "password", @class = "form-control", @id = "novaSenha", @accesskey = "10" })
                </div>
                <input type="submit" class="btn btn-primary" value="Trocar Senha" alt="Trocar Senha" title="Trocar Senha" /><br />
            }
        </div>
    </div>
    <aside class="row">
        <div class="col-sm-4 login">
            <article>
                @using (Html.BeginForm("Sair", "SistemaClientes", FormMethod.Post))
                {
                    @Html.AntiForgeryToken();
                    <p>Nome: <span style="text-transform:capitalize">@ViewBag.Nome</span></p>
                    <p>Login: <span style="text-transform:capitalize">@ViewBag.Login</span></p>
                    <p>Perfil: <span style="text-transform:capitalize">@ViewBag.Perfil</span></p>
                    <input type="submit" class="btn btn-danger" style="margin-left:25px;" value="Sair" /><br />
                }
            </article>
        </div>
    </aside>
    <div class="col-sm-8">
        <a href="/Cliente/SistemaClientes/ListaOperacoes" class="btn btn-link">Voltar</a>
    </div>
</section>