@model SalaoDoPantcho.Web.Areas.Cliente.Models.ViewModelPesquisaCliente
@{
    ViewBag.Title = "Salão do Pantcho - Pesquisa de Cliente Por Nome, Apelido e Email";
    Layout = "~/Areas/Cliente/Views/Shared/_layout.cshtml";
}

<section class="row">
    <section class="col-sm-8">
        <h1>Salão do Pantcho</h1>
        <h4>Barbershop</h4>
        <hr />
        <h5>Área Restrita do Cliente - Pesquisa dos Dados do Cliente Por Nome, Apelido e Email</h5><br />
        <div class="txtErro">
            @Html.ValidationSummary()
        </div>
        <div class="col-sm-4 formcontato" id="frmLogin">
            <h6 class="txtformulariodecontato">Formulário de Pesquisa de Cliente Por Nome, Apelido e Email</h6><hr />
            @if (@TempData["MensagemSucesso"] != null)
            {
                <div class="alert alert-success" style="text-align:center;" role="alert">
                    @TempData["MensagemSucesso"]
                </div>
            }
            @if (@TempData["MensagemErro"] != null)
            {
                <div class="alert alert-danger" style="text-align:center;" role="alert">
                    @TempData["MensagemErro"]
                </div>
            }
            @using (Html.BeginForm("PesquisarClientePorNomeApelidoEmail", "SistemaClientes", FormMethod.Get))
            {
                <div class="txtErro">
                    @Html.ValidationSummary()
                </div>
                <div class="form-group">
                    @Html.LabelFor(cliente => cliente.Nomeapelido, new { @for = "nomeapelido" })<br />
                    @Html.TextBoxFor(cliente => cliente.Nomeapelido, new { @type = "text", @class = "form-control", @id = "nomeapelido", @placeholder = "Digite seu nome ou apelido...", @accesskey = "1" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(cliente => cliente.Email, new { @for = "email" })<br />
                    @Html.TextBoxFor(cliente => cliente.Email, new { @type = "email", @class = "form-control", @id = "email", @placeholder = "Digite seu email...", @accesskey = "5" })
                </div>
                <input type="submit" class="btn btn-primary" value="Pesquisar" alt="Pesquisar" title="Pesquisar" /><br />
            }
        </div>
    </section>
    <aside class="row">
        <div class="col-sm-4 login">
            <article>
                @using (Html.BeginForm("Sair", "SistemaClientes", FormMethod.Post))
                {
                    @Html.AntiForgeryToken();
                    <p>Nome: <span style="text-transform:capitalize">@ViewBag.Nome</span></p>
                    <p>Login: <span style="text-transform:capitalize">@ViewBag.Login</span></p>
                    <p>Perfil: <span style="text-transform:capitalize">@ViewBag.Perfil</span></p>
                    <input type="submit" class="btn btn-danger" style="margin-left:25px;" value="Sair" /><br />
                }
            </article>
        </div>
    </aside>
    @if (Model != null)
    {
        <section class="row">
            <div class="col-sm-10 col-sm-push-1 listadadoscliente">
                <h5>Dados Pessoais do Cliente</h5><br />
                <table class="table table-responsive">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(cliente => cliente.Apelido)
                            </th>
                            <th>
                                @Html.DisplayNameFor(cliente => cliente.Nome)
                            </th>
                            <th>
                                @Html.DisplayNameFor(cliente => cliente.Email)
                            </th>
                            <th>
                                @Html.DisplayNameFor(cliente => cliente.Login)
                            </th>
                            <th>
                                @Html.DisplayNameFor(cliente => cliente.GeneroCliente)
                            </th>
                            <th>
                                @Html.DisplayNameFor(cliente => cliente.PerfilCliente)
                            </th>
                            <th>
                                @Html.DisplayNameFor(cliente => cliente.StatusPessoa)
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td style="text-transform:capitalize;">
                                @Html.DisplayFor(modelDadosCliente => modelDadosCliente.Apelido)
                            </td>
                            <td style="text-transform:capitalize;">
                                @Html.DisplayFor(modelDadosCliente => modelDadosCliente.Nome)
                            </td>
                            <td style="text-transform:lowercase;">
                                @Html.DisplayFor(modelDadosCliente => modelDadosCliente.Email)
                            </td>
                            <td style="text-transform:capitalize;">
                                @Html.DisplayFor(modelDadosCliente => modelDadosCliente.Login)
                            </td>
                            <td style="text-transform:capitalize;">
                                @Html.DisplayFor(modelDadosCliente => modelDadosCliente.GeneroCliente)
                            </td>
                            <td style="text-transform:capitalize;">
                                @Html.DisplayFor(modelDadosCliente => modelDadosCliente.PerfilCliente)
                            </td>
                            <td style="text-transform:capitalize;">
                                @Html.DisplayFor(modelDadosCliente => modelDadosCliente.StatusPessoa)
                            </td>
                        </tr>
                    </tbody>
                    <tfoot>

                    </tfoot>
                </table>
            </div>
        </section>
    }
    <aside class="col-sm-8">
        <a class="btn btn-link" href="/Cliente/SistemaClientes/ListaOperacoes">Voltar</a>
    </aside>
</section>