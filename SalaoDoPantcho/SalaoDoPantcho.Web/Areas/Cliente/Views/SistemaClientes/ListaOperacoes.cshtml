@{
    ViewBag.Title = "Salão do Pantcho - Lista de Operações do Cliente";
    Layout = "~/Areas/Cliente/Views/Shared/_layout.cshtml";
}

<section class="row">
    <section class="col-sm-8">
        <h1>Salão do Pantcho</h1>
        <h4>Barbershop</h4>
        <hr />
        <h5>Área Restrita do Cliente - Lista de Operações do Cliente</h5><br />
        <article>
            <p>
                Segue-se logo abaixo, uma Lista de Operações que você poderá fazer gerenciando da melhor
                forma possível suas informações em nosso sistema.
            </p>
            <br />            
            <div class="col-sm-12 listaoperacoes">
                <h6>Manter Cliente</h6>
                <ul>
                    <li><a href="/Cliente/SistemaClientes/Atualizacao" title="Salão do Pantcho - Atualizar Dados do Cliente">Atualizar Dados do Cliente</a></li>
                    <li><a href="/Cliente/SistemaClientes/TrocaSenha" title="Salão do Pantcho - Trocar Senha do Cliente">Trocar Senha do Cliente</a></li>
                    <li><a href="/Cliente/SistemaClientes/AtivaDesativa" title="Salão do Pantcho - Ativar/Desativar Dados do Cliente">Ativar/Desativar Dados do Cliente</a></li>
                    <li><a href="/Cliente/SistemaClientes/ApagarCliente" title="Salão do Pantcho - Apagar Dados do Cliente">Apagar Dados do Cliente</a></li>
                </ul>
            </div>
            <div class="col-sm-12 listaoperacoes">
                <h6>Pesquisar Cliente</h6>
                <ul>
                    <li><a href="/Cliente/SistemaClientes/PesquisaClientePorLoginEmail" title="Salão do Pantcho - Pesquisar Dados do Cliente Por Login e Email">Pesquisar Dados do Cliente Por Login e Email</a></li>
                    <li><a href="/Cliente/SistemaClientes/PesquisaClientePorLoginSenha" title="Salão do Pantcho - Pesquisar Dados do Cliente Por Login e Senha">Pesquisar Dados do Cliente Por Login e Senha</a></li>
                    <li><a href="/Cliente/SistemaClientes/PesquisaClientePorNomeApelidoEmail" title="Salão do Pantcho - Pesquisar Dados do Cliente Por Nome, Apelido e Email">Pesquisar Dados do Cliente Por Nome, Apelido e Email</a></li>
                </ul>
            </div>
            <div class="col-sm-12 listaoperacoes">
                <h6>Pesquisar Endereço do Cliente</h6>
                <ul>
                    <li><a href="/Cliente/SistemaClientes/PesquisaEnderecoPorCep" title="Salão do Pantcho - Pesquisar Endereço do Cliente Por CEP">Pesquisar Endereço do Cliente Por CEP</a></li>
                    <li><a href="/Cliente/SistemaClientes/PesquisaEnderecoPorBairro" title="Salão do Pantcho - Pesquisar Endereço do Cliente Por Bairro">Pesquisar Endereço do Cliente Por Bairro</a></li>
                    <li><a href="/Cliente/SistemaClientes/PesquisaEnderecoPorTipoEndereco" title="Salão do Pantcho - Pesquisar Endereço do Cliente Por Tipo de Endereço">Pesquisar Endereço do Cliente Por Tipo de Endereço</a></li>
                </ul>
            </div>
            <div class="col-sm-12 listaoperacoes">
                <h6>Pesquisar Contato do Cliente</h6>
                <ul>
                    <li><a href="/Cliente/SistemaClientes/PesquisaTelefonePorDDD" title="Salão do Pantcho - Pesquisar Contato do Cliente Por DDD">Pesquisar Contato do Cliente Por DDD</a></li>
                    <li><a href="/Cliente/SistemaClientes/PesquisaTelefonePorNumero" title="Salão do Pantcho - Pesquisar Contato do Cliente Por Numero">Pesquisar Contato do Cliente Por Numero</a></li>
                    <li><a href="/Cliente/SistemaClientes/PesquisaTelefonePorTipoTelefone" title="Salão do Pantcho - Pesquisar Contato do Cliente Por Tipo de Telefone">Pesquisar Contato do Cliente Por Tipo de Telefone</a></li>
                </ul>                                                
            </div>
            <a href="/Cliente/SistemaClientes" class="btn btn-link">Voltar</a>
        </article>
    </section>
    <aside class="row">
        <div class="col-sm-4 login">
            <article>
                @using (Html.BeginForm("Sair", "SistemaClientes", FormMethod.Post))
                {
                    @Html.AntiForgeryToken();
                    <p>Nome: <span style="text-transform:capitalize">@ViewBag.Nome</span></p>
                    <p>Login: <span style="text-transform:capitalize">@ViewBag.Login</span></p>
                    <p>Perfil: <span style="text-transform:capitalize">@ViewBag.Perfil</span></p>
                    <input type="submit" class="btn btn-danger" style="margin-left:25px;" value="Sair" /><br />
                }
                @{
                    if (!string.IsNullOrEmpty(@TempData["MensagemAviso"].ToString()))
                    {
                        <div class="alert alert-warning" style="text-align:center; margin-top:10px;" role="alert">
                            @TempData["MensagemAviso"]
                        </div>
                    }
                    else
                    {
                        <div></div>
                    }
                }
            </article>
        </div>
    </aside>
</section>